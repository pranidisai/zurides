    <Script>

        function loginpopup() {

            var UserName1 = $('input[name=username]').val();
            if (UserName1 == "") {
                $('.Error').show();
                return false;
            }
            var Pwd = $('input[name=password]').val();
            if (Pwd == "") {
                $('.Error').show();
                return false;
            }

            $.ajax({
                type: "GET",
                url: "/Login/LoginPopup",
                dataType: "JSON",
                data: { UserName: UserName1, Password: Pwd },
                success: function (Data) {
                    if (Data == "sucess") {
                        alert("Hi '@Session["User"]'! Welcome");
                        //window.location.reload();
                        // $('#modal').modal('hide');
                    }
                    else {
                        document.getElementById("ErrorMessage1").innerHTML = "Invalid Details please try again";

