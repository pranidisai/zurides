                        //alert(Data);
                    }
                    //window.location.reload();
                    //alert(Data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                   // window.location.reload();
                }

                //alert("Please login to add cart");
            });
        }
    </Script>
    <Script>

        function Regpopup() {

            var Name = $('input[name=regusername]').val();
            if (Name == "") {
                $('.Error').show();
                return false;
            }
            var Password = $('input[name=regpassword]').val();
            if (Password == "") {
                $('.Error').show();
                return false;
            }
            var EmailId = $('input[name=emailaddress]').val();
            if (EmailId == "") {
                $('.Error').show();
                return false;
            }
            var contact = $('input[name=regPhoneNumber]').val();
            if (contact == "") {
                $('.Error').show();
                return false;
            }


            $.ajax({
                type: "GET",
                url: "/Login/Registration",
                dataType: "JSON",
                data: { Name: Name, Password: Password, Email: EmailId, Phone: contact },
