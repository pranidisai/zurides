@model Zur.VM.AdminVM
@{
    ViewBag.Title = "CreateEMployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
<div id="page-content">
    <div class="panel">
        @using (Html.BeginForm("CreateEMployee", "Admin", FormMethod.Post, new { @id = "demo-bvd-notempty", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row" text-align:center;padding-top:50px;>
                <span style="color:red;font-weight:bold;margin-left:20px;">@ViewBag.Error</span>
            </div>
            <div class="row">
                <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">Create Employee</p>
                <span style="color:red;font-weight:bold;margin-left:20px;">@ViewBag.message</span>
                <div class="col-lg-6">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">




                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Name</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.Name, new { @class = "form-control", placeholder = "Enter Name", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Employee.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Email</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.Email, new { @class = "form-control", placeholder = "Enter Email", @required = "true",@type="email" })
                                        @Html.ValidationMessageFor(model => model.Employee.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Contact Number</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.Phone, new { @class = "form-control", placeholder = "Enter Contact number", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Employee.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label class="col-lg-3 control-label">Password</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.Pwd, new { @class = "form-control", placeholder = "Enter Password", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Employee.Pwd, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@
                            </div>


                        </fieldset>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">

                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Enter userName</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.UserName, new { @class = "form-control", placeholder = "Enter User Name", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Employee.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Designation</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Employee.Designation, new { @class = "form-control", placeholder = "Enter Designation", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Employee.Designation, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @{
                                    List<SelectListItem> listItems1 = new List<SelectListItem>
                                            ();
                                    listItems1.Add(new SelectListItem
                                    {
                                        Text = "Select Role",
                                        Value = "0",
                                        Selected = true
                                    });
                                    listItems1.Add(new SelectListItem
                                    {
                                        Text = "Owner",
                                        Value = "Owner"
                                    });
                                    //listItems1.Add(new SelectListItem
                                    //{
                                    //    Text = "BPO",
                                    //    Value = "BPO"
                                    //});




                                }
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Select Role</label>
                                    <div class="col-lg-7">
                                        @Html.DropDownListFor(model => model.Employee.Role, listItems1, new { @class = "form-control", placeholder = "Select Role Type" })
                                        @Html.ValidationMessageFor(model => model.Employee.Role, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-7 col-sm-offset-3">
                                        <button class="btn btn-mint" type="submit">Save Info</button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>

            </div>
        }
    </div>

</div>
