            <div class="row">
                <span style=" color:red;font-weight:bold;text-align:center; margin-left:100px;">@ViewBag.Error</span>
            </div>
            <div class="row">
                <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">
                    Update Cab Details &nbsp;&nbsp;&nbsp;&nbsp;
                    <a style="color:red" href="@Url.Action("CabsList","Admin")"> Go Back</a>
                </p>
                <div class="col-lg-6">
                    <div class="panel">
                        <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">Agency Info</p>
                        <fieldset>
                            <div class="panel-body">

                                <div class="form-group" hidden>
                                    <label class="col-lg-3 control-label">ID</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Vehicle.Id, new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Agent Name</label>
                                    <div class="col-lg-7">
                                        @*@Html.DropDownListFor(model => model.Vehicle.TravelerUserName, new SelectList(Model.AgentsDDL, "Key", "Value"), "--- Select Agent ---", new { @class = "form-control" })*@
                                        @Html.TextBoxFor(model => model.Vehicle.TravelerUserName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Vehicle.TravelerUserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Owner Name</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Vehicle.OwnerName, new { @class = "form-control", placeholder = "Enter Owner Name", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Vehicle.OwnerName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Vehicle Owner Contact</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Vehicle.VehicleOwnerCont, new { @class = "form-control", placeholder = "Vehicle Owner Contact", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Vehicle.VehicleOwnerCont, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Vehicle Type</label>
                                    <div class="col-lg-7">
                                        @Html.DropDownListFor(model => model.Vehicle.VehicleType, new SelectList(Model.VehicleTypeDDL, "Key", "Value"), "--- Select Vehicle Type ---", new { @onchange = "FillService()", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Vehicle.VehicleType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Eminities</label>
                                    <div class="col-lg-7">

                                        @Html.TextBoxFor(model => model.Vehicle.Eminities, new { @class = "form-control", placeholder = "Eminities", @required = "true" })

