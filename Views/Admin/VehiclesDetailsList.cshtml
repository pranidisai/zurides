
@{
    ViewBag.Title = "VehiclesDetailsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Car Specification List</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <h4>Eminities List</h4>
            <thead>
                <tr>
                    <th>ID</th>
                    <th class="min-tablet">Car Eminity</th>
                    <th class="min-desktop">Cab Status</th>
                    <th class="min-desktop">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.vehEminitiesList)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Eminity</td>
                        <td>
                            @if (user.Status == 1)
                            {
                                <span style="color:green;font:bold">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span style="color:red;font-weight:bold">
                                    In Active
                                </span>
                            }


                        </td>
                        <td>@Html.ActionLink("Edit / View", "ViewCab", new { @id = user.Id })</td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <h4>Brand List</h4>
