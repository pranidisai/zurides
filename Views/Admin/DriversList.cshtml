@model Zur.VM.AdminVM
@{
    ViewBag.Title = "DriversList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Drivers List</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="min-tablet">Name</th>
                    <th class="min-tablet">Contact Number</th>
                    <th class="min-desktop">Email</th>
                    <th class="min-tablet"> Address</th>
                    <th class="min-desktop">License</th>
                    <th class="min-desktop">Created By</th>
                    <th class="min-desktop">Created Date</th>
                    <th class="min-desktop">Cab Status</th>
                    <th class="min-desktop">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.DriversList)
                {
                <tr>
                    <td>@user.DriverName</td>
                    <td>@user.ContactNumber</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.License</td>
                    <td>@user.CreatedBy</td>
                    <td>@user.CreatedDate</td>
                    <td>
                        @if (user.Status == 1)
                        {
                            <span style="color:green;font:bold">
                                Active
                            </span>
                        }
                        else
                        {
                            <span style="color:red;font-weight:bold">
                                In Active
                            </span>
                        }


                    </td>
                    <td>@Html.ActionLink("Edit / View", "ViewDriver", new { @id = user.Id })</td>
                </tr>
                }




            </tbody>
        </table>
    </div>
</div>

