
@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Zur.VM.AdminVM
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Users List</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="min-tablet">Id</th>
                    <th class="min-tablet">User Name</th>
                    <th class="min-desktop">Email</th>
                    <th class="min-tablet"> Mobile No.</th>
                    <th class="min-tablet"> Role</th>
                    <th class="min-desktop">Created Date</th>
                    <th class="min-desktop">Status</th>
                    @*<th class="min-desktop">Action</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersList)
                {
                    <tr>
                        <td>@user.ID</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.ContNumber</td> 
                        <td>@user.Role</td>
                        <td>@user.Createddate</td>
                        <td>
                            @if (user.Status == 1)
                            {
                                <span style="color:green;font:bold">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span style="color:red;font-weight:bold">
                                    In Active
                                </span>
                            }


                        </td>
                        @*<td>@Html.ActionLink("Edit / View", "ViewDriver", new { @id = user.Id })</td>*@
                    </tr>
                }




            </tbody>
        </table>
    </div>
</div>
