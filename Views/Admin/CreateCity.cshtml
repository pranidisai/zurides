@model Zur.VM.AdminVM
@{
    ViewBag.Title = "CreateCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>

<div id="page-content">
    <div class="panel">
        @using (Html.BeginForm("CreateCity", "Admin", FormMethod.Post, new { @id = "demo-bvd-notempty", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <span style=" color:red;font-weight:bold;text-align:center; margin-right:100px;">@ViewBag.Error</span>
            </div>
            <div class="row">
                <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">Create City Details</p>

                <div class="col-lg-6">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">




                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Enter City Name</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.City.CityName, new { @class = "form-control", placeholder = "Enter City Name", @required = "true" })
                                        @Html.ValidationMessageFor(model=>model.City.CityName,"", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>


                        </fieldset>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Enter short code</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.City.CityCode, new { @class = "form-control", placeholder = "Enter City Code", @required = "true" })
                                        @Html.ValidationMessageFor(model=>model.City.CityCode,"", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-7 col-sm-offset-3">
                                        <button class="btn btn-mint" type="submit">Add City</button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>

            </div>
        }
    </div>

</div>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Cabs List</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>City Name</th>
                    <th class="min-tablet">Short code</th>
                    <th>Status</th>

                    <th class="min-desktop">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.CitiesList)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.CityName</td>
                        <td>@user.CityCode</td>
                        <td>
                            @if (user.Status == 1)
                            {
                                <span style="color:green;font:bold">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span style="color:red;font-weight:bold">
                                    In Active
                                </span>
                            }


                        </td>
                        <td>@Html.ActionLink("Edit / View", "ViewCity", new { @id = user.Id })</td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
</div>