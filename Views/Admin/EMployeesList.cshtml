@model Zur.VM.AdminVM
@{
    ViewBag.Title = "EMployeesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Employees List</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-selection" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th class="min-tablet">Role</th>
                    <th class="min-tablet">Email</th>
                    <th class="min-desktop">Contact Number</th>
                    <th class="min-desktop">Status</th>
                    <th class="min-desktop">Action</th>
                </tr>
            </thead>
            <tbody>
             @foreach(var user in Model.EmployeesList)
             {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Designation</td>
                    <td>@user.Role</td>
                    <td>@user.Email</td>

                    <td>@user.Phone</td>
                    <td>
                        @if (user.Status == 1)
                            {
                                <span style="color:green;font:bold">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span style="color:red;font-weight:bold">
                                    In Active
                                </span>
                            }

                    </td>
                    <td>@Html.ActionLink("Edit / View", "ViewEMployeeinfo", new { @id = user.Id })</td>
                </tr>
             }
                
              
             

            </tbody>
        </table>
    </div>
</div>
