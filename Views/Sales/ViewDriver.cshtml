
@{
    ViewBag.Title = "ViewDriver";
    Layout = "~/Views/Shared/_SalesLayout.cshtml";
}
@model Zur.VM.AdminVM

<div id="page-content">
    <div class="panel">
        @using (Html.BeginForm("ViewDriver", "Sales", FormMethod.Post, new { @class = "demo-bvd-notempty", enctype = "multipart/form-data" }))
        {
            <div class="row" style="text-align:right;padding-top:20px;margin-right:40px;">
                <span style="color:red;font-weight:bold; margin-top:10px; ">@ViewBag.Error</span>
                <a href="@Url.Action("DriversList","Sales")"><label class="btn btn-danger">Back To List</label></a>
            </div>
            <div class="row">
                <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">View Driver</p>
                <div class="col-lg-6">
                    <div class="panel" style="padding-left:0px;padding-right:0px;">

                        <fieldset>
                            <div class="panel-body">



                                <div class="form-group" hidden>
                                    <label class="col-lg-3 control-label">ID</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.Id, new { @class = "form-control", placeholder = "Enter Name", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Driver Name</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.DriverName, new { @class = "form-control", placeholder = "Driver Name", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Contact Number </label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.ContactNumber, new { @class = "form-control", placeholder = "Enter Conatct No.", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Email</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.Email, new { @class = "form-control", placeholder = "Enter Email", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Address</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.Address, new { @class = "form-control", placeholder = "Enter Address", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">License No.</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.License, new { @class = "form-control", placeholder = "Enter License No.", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Batch Number</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.BatchNumber, new { @class = "form-control", placeholder = "Enter Batch Number", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">License Expire Date</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.DrivingLicenseExpiredDate, new { @class = "form-control", placeholder = "Enter Expire Date", @required = "true" })

                                    </div>
                                </div>
                               

                                @*<div class="form-group">
            <label class="col-lg-3 control-label">Driver Image </label>
            <div class="col-lg-7">
                <input type="file" class="form-control" name="ImageData" id="ImageData" required="true" />
            </div>
        </div>*@
                            </div>


                        </fieldset>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">License Issued Date</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.DriversInfo.LicenseIssuedDate, new { @class = "form-control", placeholder = "Enter License Issued Date", @required = "true" })

                                    </div>
                                </div><br /><br />
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Status of driver</label>
                                    <div class="col-lg-4">
                                        @Html.CheckBoxFor(model => model.DriversInfo.DriverStatus, new { @class = "form-control", placeholder = "Select status ", @required = "true" })

                                    </div>
                                </div>
                                @*<div class="form-group">
            <label class="col-lg-3 control-label">Adhar no.</label>
            <div class="col-lg-7">
                @Html.TextBoxFor(model => model.DriversInfo.AdharCard, new { @class = "form-control", placeholder = "Enter Adhar No.", @required = "true" })

            </div>
        </div>*@

                            </div>
                           
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-7 col-sm-offset-3">
                                        <button class="btn btn-mint" type="submit">Save Info</button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>

            </div>
        }
    </div>

</div>

