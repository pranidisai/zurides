
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}
@model Zur.Common.ContactModel
<section id="contact">
    <div class="spe-title col-md-12" style="margin-top:65px;">
        <h2><span style="color:#ff7200;">Contact us</span></h2>
        <div class="title-line">
            <div class="tl-1"></div>
            <div class="tl-2"></div>
            <div class="tl-3"></div>
        </div>
        <p>Zurides is the subsidiary of Agasthya AppLabs. To cater the needs of the intercity passengers and travel outskirts, this has been a proven one.</p>
    </div>
    <div class="contact-section">
        <div class="container">
            @using (Html.BeginForm("Index", "Contactus", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
            {
               
                <form>
                    <div class="col-md-5 form-line">
                        <div class="form-group">

                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", placeholder = "Full Name", @required = "true" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control ", placeholder = "Email Id", @required = "true" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Mobileno, new { @class = "form-control ", placeholder = "10-digit Mobile no.", @required = "true" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Message, new { @class = "form-control ", placeholder = "Your Message", @required = "true" })

                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Send Message</button>
                        </div>
                        <div class="form-group">
                            <span style="color:green;text-align:center;margin-bottom:8px;">@ViewBag.Error</span>
                        </div>
                    </div>

                </form>
            }
            <div class="col-md-4 col-md-offset-2 form-line">
                <h4>Call Center - 24/7</h4>
                <hr style="border-top: 1px solid gray;">
                <p>Phone No : 1800 - 000 - 8989</p><br />
                @*<hr style="border-top: 1px solid gray;">*@
                <h4>Head Office</h4>
                <hr style="border-top: 1px solid gray;">
                <p>
                    Address : <b>Agasthya App Labs Pvt Ltd,</b><br />
                    Plot no #305,
                    Ayyappa Society,
                    Madhapur.
                </p>
                <p>Email : info@Zurides.com</p>
                @*<p>Email:</p>*@
                @*<hr style="border-top: 1px solid gray;">
            <h4>Branch Offices</h4>
            <hr style="border-top: 1px solid gray;">
            <h4>Address:</h4>
            <p>Phone:</p>
            <p>Email:</p>
            <hr style="border-top: 1px solid gray;">*@
            </div>

        </div>
        <hr />
    </div>
</section>

