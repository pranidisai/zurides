
@{
    ViewBag.Title = "ProfileEditing";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model Zur.VM.AdminVM

<div id="page-content">
    <div class="panel">
        @using (Html.BeginForm("ProfileEditing", "Login", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {


            <div class="row">

                <div class="col-lg-12">
                    <div class="panel">

                        <fieldset>
                            <div class="panel-body">
                                <div class="row">
                                    <span style=" color:red;font-weight:bold;text-align:center; margin-right:40px;">@ViewBag.Error</span>
                                </div>
                                <p class="bord-btm pad-ver text-main text-bold" style="margin-left:50px">Profile Editing</p>


                                <div class="form-group">
                                    <label class="col-lg-3 control-label">User Name </label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => Session["User2"], new { value = @Session["User2"].ToString(), @class = "form-control", placeholder = "Enter UserName", @readonly = "readonly" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Email</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model =>model.Userreg.Email, new { @class = "form-control", placeholder = "New Email" })
                                        @*@Html.ValidationMessageFor(model => model.DriversInfo.DriverUserName, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Name</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Userreg.Name, new { @class = "form-control", placeholder = "Enter Name", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">City</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(model => model.Userreg.CurrentLocation, new { @class = "form-control", placeholder = "City", @required = "true" })

                                    </div>
                                </div>
                                @{
                                    List<SelectListItem> listItems1 = new List<SelectListItem>
                                            ();
                                    listItems1.Add(new SelectListItem
                                    {
                                        Text = "Select Gender",
                                        Value = "0",
                                        Selected = true
                                    });
                                    listItems1.Add(new SelectListItem
                                    {
                                        Text = "Male",
                                        Value = "Male"
                                    });
                                    listItems1.Add(new SelectListItem
                                    {
                                        Text = "Female",
                                        Value = "Female"
                                    });


                                }
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Gender</label>
                                    <div class="col-lg-7">
                                        @Html.DropDownListFor(model => model.Userreg.gender,listItems1, new { @class = "form-control", placeholder = "Gender", @required = "true" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Image</label>
                                    <div class="col-lg-7">
                                        <input type="file" class="form-control" name="ImageData" id="ImageData" required="true" />

                                    </div>
                                </div>

                            </div>
                            <div class="form-group">


                                <div class="row">
                                    <div class="col-sm-7 col-sm-offset-3">
                                        <button class="btn btn-mint" type="submit">Save Info</button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
